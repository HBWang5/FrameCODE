<?xml version="1.0" encoding="utf-8"?>
<com.iqb.src.widget.IQBLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_color"
    android:gravity="center"
    android:orientation="vertical">

    <com.iqb.src.widget.IQBScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x25"
        android:minWidth="@dimen/x570"
        android:minHeight="@dimen/y800"
        tools:ignore="UselessParent">

        <com.iqb.src.widget.IQBLinearLayout
            android:layout_width="@dimen/x570"
            android:layout_height="@dimen/y800"
            android:background="@drawable/base_shape_dialog_ios"
            android:orientation="vertical">

            <com.iqb.src.widget.IQBTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="选择需要的课件"
                android:id="@+id/player_select_title_tv"
                android:textColor="#000"
                android:textSize="@dimen/x35"
                tools:ignore="HardcodedText" />


                <com.iqb.src.widget.IQBLinearLayout
                    android:id="@+id/player_select_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="#7F7F7F" />

            <com.iqb.src.widget.IQBLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.iqb.src.widget.IQBTextView
                    android:id="@+id/dialog_first_open_disagree_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="取消"
                    android:textSize="@dimen/x27"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#7F7F7F" />

                <com.iqb.src.widget.IQBTextView
                    android:id="@+id/dialog_first_open_consent_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="确认"
                    android:textColor="@color/yellow_color"
                    android:textSize="@dimen/x27"
                    tools:ignore="HardcodedText" />
            </com.iqb.src.widget.IQBLinearLayout>
        </com.iqb.src.widget.IQBLinearLayout>
    </com.iqb.src.widget.IQBScrollView>
</com.iqb.src.widget.IQBLinearLayout>