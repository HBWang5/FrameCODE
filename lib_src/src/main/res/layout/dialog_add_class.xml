<?xml version="1.0" encoding="utf-8"?>
<com.iqb.src.widget.IQBLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x560"
    android:layout_height="@dimen/y676"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/shape_patriarch_add_class_dialog"
    android:orientation="vertical">

    <com.iqb.src.widget.IQBTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/patriarch_join_class_dialog_title"
        android:gravity="center"
        android:textColor="@color/white_color"
        android:text="加入新教室"
        android:textSize="@dimen/x35"
        tools:ignore="HardcodedText" />

    <com.iqb.src.widget.IQBLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginRight="@dimen/x48"
        android:orientation="vertical">

        <com.iqb.src.widget.IQBEditText
            android:id="@+id/add_class_id_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入教室id"
            android:textSize="@dimen/x27"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y24"
            android:background="@color/edit_line_color" />
    </com.iqb.src.widget.IQBLinearLayout>

    <com.iqb.src.widget.IQBLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginRight="@dimen/x48"
        android:orientation="vertical">

        <com.iqb.src.widget.IQBEditText
            android:id="@+id/add_class_password_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="@dimen/x27"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y24"
            android:background="@color/edit_line_color" />
    </com.iqb.src.widget.IQBLinearLayout>

    <com.iqb.src.widget.IQBButton
        android:id="@+id/next_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginTop="@dimen/y90"
        android:textColor="@color/white_color"
        android:background="@drawable/shape_login_btn_select"
        android:layout_marginRight="@dimen/x48"
        android:layout_marginBottom="@dimen/y120"
        android:text="确定"
        android:textSize="@dimen/x35"
        tools:ignore="HardcodedText" />
</com.iqb.src.widget.IQBLinearLayout>